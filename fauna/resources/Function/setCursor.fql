// Function that updates the cursor and enforces 0 or 1 cursor document
// invariant.
CreateFunction({
  name: "setCursor",
  body: Query(
    Lambda(
      ["value"],
      Let(
        {
          match: Documents(Collection("Cursor")),
        },
        If(
          IsEmpty(Var("match")),
          Create(Collection("Cursor"), Var("value")),
          Update(Select("ref", Get(Var("match"))), Var("value"))
        )
      )
    )
  ),
})
