{
  "name": "@niftysave/scanner",
  "version": "0.0.0",
  "description": "Job that scans chain for erc-721 tokens",
  "main": "./src/main.js",
  "type": "module",
  "scripts": {
    "repl": "node --experimental-repl-await -i -e 'import(`./.repl.js`)'",
    "start": "node ./src/main.js",
    "test": "mocha *.spec.js",
    "coverage": "c8 npm test && c8 report --reporter lcov --reporter html",
    "lint": "standard",
    "generate-erc721-source": "generate-graphql-client --post --endpoint https://api.thegraph.com/subgraphs/name/nftstorage/eip721-subgraph --output ./sources/erc721 && cp template/* sources/erc721",
    "generate-db-source": "generate-graphql-client --fetcher ./tools/fetcher.cjs --output ./sources/db && cp template/* sources/db",
    "generate": "yarn generate-erc721-source && yarn generate-db-source"
  },
  "license": "(Apache-2.0 AND MIT)",
  "devDependencies": {
    "@types/assert": "^1.5.4",
    "@types/mocha": "^8.2.2",
    "assert": "^2.0.0",
    "c8": "^7.7.1",
    "graphql-tag-pluck": "0.8.7",
    "mocha": "^8.3.2",
    "standard": "^16.0.3"
  },
  "standard": {
    "ignore": [
      "*.ts"
    ]
  },
  "dependencies": {
    "@web-std/fetch": "^2.0.1",
    "dotenv": "^9.0.2",
    "graphql-typed-client": "1.7.4",
    "multiformats": "^6.0.1",
    "nft.storage": "^0.4.1",
    "typescript": "^4.2.4",
    "faunadb": "^4.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nftstorage/niftysave.git"
  },
  "keywords": [
    "niftysave"
  ],
  "bugs": {
    "url": "https://github.com/nftstorage/niftysave/issues"
  },
  "homepage": "https://github.com/nftstorage/niftysave#readme",
  "publishConfig": {
    "access": "public"
  }
}
